.message-composer
  display table

  width 100%
  padding 0.5em

  &.preview
    position fixed
    bottom 0

  .overlay
    position fixed
    z-index -1
    bottom 0
    left 0

    width 100%
    height 100%

    background-color rgba(0,0,0,0.85)

    .icon-back
      position absolute
      top 0.5em
      left 0.5em

      iconSize(1em)

    img
      position absolute

      top 50%
      left 50%
      transform translate(-50%, -50%)

      max-width 100%
      max-height 80%

  > *
    display table-cell

  > div:first-of-type
    width calc(100% - 1.5em)
    padding-right 10px

    vertical-align middle

    .icon-camera
      position absolute
      bottom 1em

      iconSize(1em)


    textarea
      position relative

      width 100%
      padding 0.25em 0.5em

      font-size 1em

      border none
      outline none

      resize none
      overflow-y auto

      border-radius 0.2em
      box-shadow 0 0 3px 0 rgba(0,0,0,0.25)

  > div:last-of-type
    width 1.5em

    text-align center
    line-height 1.5em

    div
      position absolute
      top 50%
      transform translateY(-50%)

      height 1.5em
      width 1.5em
      background-color $greenDark

      border-radius 0.75em
      box-shadow 0 0 3px 0 rgba(0,0,0,0.5)

      .icon
        vertical-align middle

        iconSize(1em)
